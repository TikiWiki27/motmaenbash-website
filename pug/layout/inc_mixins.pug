mixin accordion-header(id, icon, title)
  h3(id=id class="mt-3 mb-3 pb-2 border-bottom")
    i(class=`${icon} me-2`)
    | #{title}
    if block
      block    
    
mixin accordion-item(id, icon, title, badge, isBold=false)
  .accordion-item
    h3.accordion-header
      button.accordion-button.collapsed(type="button" data-bs-toggle="collapse" data-bs-target=`#${id}` aria-expanded="false" class=isBold ? 'fw-bold' : '')
        i(class=`${icon} me-2`)
        | #{title}
        if badge
          span.badge(class=`${badge.color} text-white ms-2`)= badge.text
    .accordion-collapse.collapse(id=id data-bs-parent="#faqAccordion")
      .accordion-body.fs-6
        block