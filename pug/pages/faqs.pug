extends ../layout/base.pug
include ../layout/inc_mixins.pug

block variables
  - var title = 'سوال‌های متداول | مطمئن باش'
  - var description = 'پاسخ به سوالات رایج درباره فیشینگ، اعتماد به مطمئن باش و سطح دسترسی‌های برنامه اندروید.'
  - var keywords = 'سوالات متداول, فیشینگ, مطمئن باش, افزونه مرورگر, برنامه اندروید, کلاهبرداری اینترنتی'
  - var url = 'https://motmaenbash.ir/faq.html'

block content
  section.container.my-2
    h1.text-center.mb-3 سوال‌های متداول
    .row.justify-content-center
      .col-12
        .d-flex.flex-wrap.gap-2.mb-3
          a.btn.btn-blue(href="#general") سوال‌های عمومی فیشینگ
          a.btn.btn-blue(href="#motmaen-bash") عملکرد مطمئن باش
          a.btn.btn-blue(href="#trust") اعتماد به مطمئن باش؟
          a.btn.btn-blue(href="#android-app") دسترسی‌های اندروید

        #faqAccordion.accordion

          // Section 1: General Questions
          +accordion-header("general", "fas fa-shield", "سوال‌های عمومی فیشینگ")

          +accordion-item("collapse1", "fas fa-shield", "فیشینگ چیست و چگونه انجام می‌شود؟")
            .row.mt-3
              .col-md-8
                p فیشینگ یک روش کلاهبرداری اینترنتی است که مهاجمان با جعل هویت سازمان‌ها و خدمات معتبر و فریب کاربر، اطلاعات حساس آن‌ها مانند اطلاعات هویتی، اطلاعات مالی و بانکی، رمزهای عبور و... را سرقت می‌کنند.
                ul.list-check
                  li مهاجمان خود را به عنوان نهادخدمات‌دهنده‌ها و نهادهای معتبر جا می‌زنند
                  li از طریق کانال‌های دیجیتال مانند ایمیل، پیامک و شبکه‌های اجتماعی حمله می‌کنند
                  li صفحات جعلی‌ای طراحی می‌کنند که مشابه درگاه‌های پرداخت یا سرویس‌های شناخته‌شده است
                  li قربانیان را ترغیب می‌کنند اطلاعات حساس خود را وارد کنند
                .alert.alert-info.mt-3
                  strong مثال متداول:
                  |  دریافت پیامک جعلی با عنوان "ابلاغیه قضایی" که کاربر را به یک صفحه تقلبی هدایت می‌کند تا برنامه مخرب دانلود کند یا اطلاعات بانکی خود را وارد نماید.
                hr
                h6 مهاجمان از تکنیک‌های مختلف برای فریب کاربران استفاده می‌کنند، از جمله:
                ul.list-unstyled
                  li
                    i.fas.fa-triangle-exclamation.text-warning.me-1
                    | ارسال پیامک‌های فریبنده با وعده‌های دروغین مانند "برنده جایزه شدید" یا "دریافت بسته اینترنت رایگان".
                  li
                    i.fas.fa-triangle-exclamation.text-warning.me-1
                    | طراحی صفحات جعلی درگاه پرداخت بانکی برای سرقت اطلاعات کارت.
                  li
                    i.fas.fa-triangle-exclamation.text-warning.me-1
                    | انتشار برنامه‌های مخرب در شبکه‌های اجتماعی و پیام‌رسان‌ها.
                  li
                    i.fas.fa-triangle-exclamation.text-warning.me-1
                    | ارسال ایمیل‌های جعلی با هشدارهای اضطراری مانند "مسدود شدن حساب" یا "نیاز به تأیید فوری اطلاعات".
                .alert.alert-warning.mt-3
                  i.fas.fa-triangle-exclamation.me-1
                  | کاربران با وارد کردن اطلاعات در این صفحات، اطلاعات خود را در اختیار کلاهبرداران می‌گذارند
              .col-md-4
                .card.bg-light.mb-3
                  .card-body
                    h6
                      i.ion-md-alert.me-2
                      | روش‌های شایع فیشینگ:
                    ul.list-check
                      li پیامک‌های جعلی و فریبنده
                      li صفحات بانکی جعلی
                      li برنامه‌های مخرب
                      li ایمیل‌های اضطراری
                .card.bg-light.mb-3
                  .card-body
                    h6 
                      i.ion-ios-chatbubbles.me-2
                      | پیامک‌های فریبنده
                    ul.list-check
                      li پیشنهاد شارژ رایگان
                      li هشدارهای جعلی بانکی
                      li لینک‌های کوتاه مشکوک
                .card.bg-light
                  .card-body
                    h6
                      i.ion-logo-android.me-2
                      | برنامه‌های جعلی
                    ul.list-check
                      li نسخه‌های تقلبی برنامه‌های بانکی
                      li نسخه جعلی برنامه‌های دولتی
                      li ابزارهای فیلترشکن ناشناس


          +accordion-item("collapse2", "fas fa-comment", "چگونه یک پیامک فیشینگ را تشخیص دهیم؟")
            h6 برای تشخیص پیامک‌های فیشینگ به این نکات توجه کنید:
            ul.list-unstyled
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | وجود اشتباهات املایی و نگارشی در متن پیامک
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | وجود لینک‌های کوتاه‌شده و مشکوک در متن پیامک
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | ارسال پیامک‌های جعلی با عناوین فریبنده مانند "برنده جایزه شده‌اید" یا "پرداخت عوارض معوقه"
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | پیامک‌های جعلی با ادعای واریز یارانه یا حذف از لیست دریافت‌کنندگان
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | پیامک‌های جعلی به نام قوه قضاییه با درخواست مشاهده ابلاغیه و پرونده
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | ارسال پیامک از شماره‌های شخصی به جای سرشماره‌های رسمی مانند adliran و...
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | درخواست اطلاعات شخصی، رمز کارت یا کد تأیید در پیامک
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | استفاده از جملات تهدیدآمیز مانند "در صورت عدم پرداخت، حساب شما مسدود می‌شود"

          +accordion-item("collapse3", "fas fa-envelope", "چگونه یک ایمیل فیشینگ را تشخیص دهیم؟")
            h6 برای تشخیص ایمیل‌های فیشینگ به این نکات توجه کنید:
            ul.list-unstyled
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | بررسی دامنه فرستنده با دقت بالا (مثال: support@google-support.com به جای @google.com)
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | وجود لینک‌های کوتاه‌شده و مشکوک
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | بررسی دامنه لینک‌های موجود در ایمیل با دقت بالا (مثال: inistagram.com به جای instagram.com)
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | درخواست اطلاعات حساس از طریق ایمیل (مثال: نام کاربری و رمز عبور پس از کلیک بر روی لینک)
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | درخواست‌های فوری و تهدیدآمیز برای ورود اطلاعات حساس (مثل از دست دادن دسترسی به اکانت)
              li
                i.fas.fa-triangle-exclamation.text-warning.me-1
                | فایل‌های ضمیمه ناشناس و غیرضروری در ایمیل

          +accordion-item("collapse4", "fas fa-shield-alt", "راه‌های مقابله با فیشینگ چیست؟")
            h6 برای محافظت در برابر حملات فیشینگ، اقدامات زیر را انجام دهید:
            ul.list-unstyled
              li
                i.fas.fa-check-double.text-success.me-1
                | افزایش سطح آگاهی خود درباره روش‌های جدید فیشینگ و هشدار به اطرافیان
              li
                i.fas.fa-check-double.text-success.me-1
                | بررسی دقیق سایت‌ها قبل از وارد کردن اطلاعات
              li
                i.fas.fa-check-double.text-success.me-1
                | دانلود برنامه‌های موبایل فقط از منابع رسمی و معتبر
              li
                i.fas.fa-check-double.text-success.me-1
                | توجه به هشدارهای امنیتی مرورگر، آنتی‌ویروس و سایر ابزارهای امنیتی
              li
                i.fas.fa-check-double.text-success.me-1
                | عدم وارد کردن اطلاعات در سایت‌های ناشناس و مشکوک
              li
                i.fas.fa-check-double.text-success.me-1
                | نادیده گرفتن و حذف پیامک‌ها و ایمیل‌های مشکوک
              li
                i.fas.fa-check-double.text-success.me-1
                | عدم کلیک رو لینک‌های ناشناس و مشکوک در پیام‌رسانها، شبکه‌های اجتماعی، پیامک و ایمیل
              li
                i.fas.fa-check-double.text-success.me-1
                | عدم نصب برنامه‌های ناشناس مثل وی‌پی‌ان و ... از طریق تلگرام و سایر یام رسان‌ها
              li.mb-2
                i.fas.fa-check-double.text-success.me-1
                | نصب و استفاده از افزونه مرورگر و برنامه موبایل "مطمئن باش" برای خود و اعضای خانواده:

            a.btn.btn-sm.btn-outline-primary.mt-2.me-3(href="https://motmaenbash.ir/#android-app" target="_blank")
              i.fab.fa-android.me-1
              | دریافت برنامه موبایل مطمئن باش

            a.btn.btn-sm.btn-outline-primary.mt-2(href="https://motmaenbash.ir/#download" target="_blank")
              i.fas.fa-download.me-1
              | دریافت افزونه مرورگر مطمئن باش


          // Section 2: Motmaenbash
          +accordion-header("motmaen-bash", "fas fa-mobile-alt", "عملکرد مطمئن باش")


          +accordion-item("collapse5", "fab fa-android", "برنامه اندروید مطمئن باش چگونه کار می‌کند؟")
            p.lead برنامه اندروید "مطمئن باش" از مکانیزم‌ها و روش‌های زیر برای افزایش امنیت کاربران در برابر حملات فیشینگ استفاده می‌کند: 🚀
            .row.mt-3
              .col-md-6
                .card.border-secondary.mb-3
                  .card-header.bg-secondary.text-white محافظت پیامکی
                  .card-body
                    ul.list-unstyled
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | بررسی خودکار پیامک‌های دریافتی و شناسایی پیامک‌های مشکوک
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | اسکن لینک‌های موجود در پیامک‌ها و نمایش هشدار در صورت خطر
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | نمایش هشدار در صورت شناسایی پیامک‌های مشکوک
              .col-md-6
                .card.border-secondary.mb-3
                  .card-header.bg-secondary.text-white محافظت مرورگر
                  .card-body
                    ul.list-unstyled
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | بررسی خودکار لینک‌های بازشده در مرورگر کاربر
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | نمایش پیام اطمینان سبز هنگام ورود به درگاه‌های پرداخت معتبر شاپرک
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | هشدار فوری هنگام شناسایی وبسایت‌های مشکوک یا فریبنده روی مرورگر کاربر
            .row.mt-2
              .col-md-6
                .card.border-secondary.mb-3
                  .card-header.bg-secondary.text-white محافظت برنامه
                  .card-body
                    ul.list-unstyled
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | بررسی و هشدار هنگام شناسایی برنامه‌های مشکوک هنگام نصب برنامه جدید
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | امکان اسکن دستی برنامه‌های نصب‌شده برای شناسایی برنامه‌های مخرب
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | هشدار نسبت به برنامه‌های درخواست‌کننده دسترسی‌های مشکوک
              .col-md-6
                .card.border-secondary.mb-3
                  .card-header.bg-secondary.text-white ویژگی‌های عمومی
                  .card-body
                    ul.list-unstyled
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | نمایش نکات آموزشی کوتاه و کاربردی درباره امنیت در صفحه اصلی برنامه.
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | به‌روزرسانی مداوم و خودکار پایگاه داده برای شناسایی تهدیدات جدید
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | عملکرد برنامه به صورت لحظه‌ای و آفلاین بدون نیاز به اینترنت
                      li
                        i.fas.fa-check-double.text-success.me-1
                        | امکان گزارش موارد جدید کلاهبرداری توسط کاربران و به‌روزرسانی پایگاه داده به‌صورت مشارکتی



          +accordion-item("collapse31", "fas fa-mobile-alt", "آیا برنامه موبایل مطمئن باش برای بررسی و شناسایی پیامک و لینک و برنامه مخرب اطلاعات را به سرور ارسال می‌کند؟")
            | خیر، برنامه موبایل "مطمئن باش" به هیچ عنوان اطلاعات کاربران را به هیچ سروری ارسال نمی‌کند و به‌صورت کاملا آفلاین کار می‌کند و هیچ سرور مرکزی ندارد.
            | تمامی پردازش‌ها شامل شناسایی لینک‌های مشکوک، پیامک‌های فیشینگ و برنامه‌های مخرب، به‌صورت کاملا آفلاین روی دستگاه انجام می‌شود.
            | دیتابیس داخلی برنامه برای شناسایی تهدیدهای جدید، در بازه‌های زمانی مشخص از طریق مخزن گیت‌هاب به‌روزرسانی می‌شود، آن هم بدون نیاز به ارسال هیچ‌گونه اطلاعات از طرف کاربر.

          +accordion-item("collapse6", "fas fa-globe", "افزونه مرورگر مطمئن باش چگونه کار می‌کند؟")
            | افزونه مرورگر "مطمئن باش" از روش‌های زیر برای حفاظت بیشتر از شما در مقابل فیشینگ استفاده می‌کند:
            ul.list-unstyled
              li
                i.fas.fa-check-double.text-success.me-1
                | بررسی خودکار آدرس درگاه‌های پرداخت
              li
                i.fas.fa-check-double.text-success.me-1
                | نمایش نماد سبزرنگ
                span.text-success
                  i.fas.fa-circle-check.text-success.mx-1
                | در صورت اطمینان از اصالت درگاه پرداخت
          +accordion-item("collapse7", "fas fa-flag", "چگونه می‌توانم فیشینگ و کلاهبرداری جدید را گزارش کنم؟")
            .row
              .col-md-8
                p
                  | برای ارسال گزارش پیامک‌ها، سایت‌ها و برنامه‌های فیشینگ و کلاهبرداری، می‌توانید از فرم ارسال گزارش استفاده کنید.
                  | ارسال گزارش‌های شما باعث می‌شود دامنه تشخیص برنامه مطمئن باش گسترده‌تر شود.
              .col-md-4
                .card.bg-light
                  .card-body.text-center
                    a.btn.btn-sm.btn-outline-primary.mt-2(href="https://forms.gle/odNaY6jeks2eqZDZA" target="_blank")
                      i.far.fa-envelope.me-1
                      | ارسال گزارش

          +accordion-item("collapse8", "fas fa-dollar-sign", "آیا این برنامه رایگان است؟")
            | بله، این برنامه در حال حاضر رایگان است و شما می‌توانید بدون هیچ هزینه‌ای از آن استفاده کنید.
          +accordion-item("collapse23", "fab fa-chrome", "سپر وب‌گردی مطمئن باش روی اندروید از چه مرورگرهایی پشتیبانی می‌کند؟")
            | سپر وب‌گردی مطمئن باش در حال حاضر از مرورگرهای زیر پشتیبانی می‌کند:
            br
            | کروم (Chrome)، فایرفاکس (Firefox)، مایکروسافت اج (Edge)، اپرا
            | (Opera)، بریو (Brave)، داک‌داک‌گو (DuckDuckGo)، سامسونگ اینترنت
            |  (Samsung Internet)، یو‌سی بروزر (UC)، کوانت (Qwant).
            br
            |ممکن است در آینده پشتیبانی از مرورگرهای بیشتری به برنامه اضافه شود.

          // Section 3: Trust
          +accordion-header("trust", "fas fa-lock", "اعتماد به مطمئن باش؟")


          +accordion-item("collapse9", "fas fa-lock", "آیا مطمئن باش امن است؟")
            .row
              .col-md-8
                p.fw-bold بله، مطمئن باش یک پروژه متن‌باز (Open Source) است و تمام کدهای آن در گیت‌هاب قابل مشاهده و بررسی است.
                p
                  | ویژگی‌های امنیتی کلیدی مطمئن باش:
                ul.list-unstyled
                  li
                    i.fas.fa-check-double.text-success.me-1
                    | کد کاملا متن‌باز و قابل بررسی توسط کارشناسان امنیت و عموم کاربرها
                  li
                    i.fas.fa-check-double.text-success.me-1
                    | بدون سرور مرکزی - اطلاعات مورد نیاز برای به‌روززرسانی پایگاه داده برنامه از یک ریپازیتوری گیت‌هاب دریافت می‌شود
                  li
                    i.fas.fa-check-double.text-success.me-1
                    | عدم ارسال داده‌های کاربر به سرور یا شخص ثالث
                  li
                    i.fas.fa-check-double.text-success.me-1
                    | امکان کنترل دسترسی‌ها توسط کاربر
              .col-md-4
                .card.bg-light
                  .card-body.text-center
                    h5 متن‌باز و قابل بررسی توسط همه
                    a.btn.btn-sm.btn-outline-primary.mt-2(href="https://github.com/miladnouri/motmaenbash" target="_blank")
                      i.fab.fa-github.me-1
                      | مشاهده کد در گیت‌هاب


